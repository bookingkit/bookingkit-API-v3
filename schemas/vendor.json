{
  "required": true,
  "$schema": "http://json-schema.org/draft-03/schema",
  "type": "object",
  "title": "Vendor",
  "properties": {
    "id": {
      "required": true,
      "type": "string",
      "description": "unique identifier"
    },
    "name": {
      "required": true,
      "type": "string",
      "description": "vendor name, usually a company name"
    },
    "url": {
      "required": false,
      "type": "string",
      "description": "vendor homepage"
    },
    "service_email": {
      "required": false,
      "type": "string",
      "format": "email",
      "description": "contact email for customer service"
    },
    "service_phone": {
      "required": false,
      "type": "string",
      "description": "contact phone for customer service"
    },
    "image": {
      "required": false,
      "type": "string",
      "description": "URL of vendor logo"
    },
    "terms":{
      "required": false,
      "type": "string",
      "description": "vendor business terms"
    },
    "bill_country":{
      "required": true,
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code"
    },
    "country_of_residence":{
      "required": true,
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code"
    },
    "activation_date": {
      "required": true,
      "type": "string",
      "format": "date-time",
      "description": "vendor activation date",
      "example": "format: YYYY-MM-DDThh:mm:ssZ, UTC"
    },
    "currency": {
      "required": false,
      "type": "string",
      "description": "The vendor's currency code (ISO 4217)"
    },
    "bill_company_name": {
      "required": false,
      "type": "string",
      "description": "The vendor's bill country name"
    },
    "bill_first_name": {
      "required": false,
      "type": "string",
      "description": "The vendor representatives first name"
    },
    "bill_last_name": {
      "required": false,
      "type": "string",
      "description": "The vendor representatives last name"
    }
  }
}
