{
  "required": true,
  "$schema": "http://json-schema.org/draft-03/schema",
  "type": "object",
  "title": "Event Patch",
  "properties": {
    "title": {
      "required": false,
      "type": "string",
      "description": "event title, descriptive",
      "maxLength": 255
    },
    "description": {
      "required": false,
      "type": "string",
      "description": "text describing the event"
    },
    "duration": {
      "required": false,
      "type": "number",
      "description": "duration of the event in minutes"
    },
    "pre_time": {
      "description": "how much earlier clients should arrive, in minutes",
      "required": false,
      "type": "integer"
    },
    "max_participants": {
      "required": false,
      "type": "integer",
      "description": "maximum number of concurrent participants for one event"
    },
    "location": {
      "required": false,
      "type": "string",
      "description": "event location address"
    },
    "location_lng": {
      "required": false,
      "type": "number",
      "description": "geo coordinate"
    },
    "location_lat": {
      "required": false,
      "type": "number",
      "description": "geo coordinate"
    },
    "meeting_location": {
      "required": false,
      "type": "string",
      "description": "meeting location address, MAY differ from event location"
    },
    "meeting_location_lng": {
      "required": false,
      "type": "number",
      "description": "geo coordinate"
    },
    "meeting_location_lat": {
      "required": false,
      "type": "number",
      "description": "geo coordinate"
    },
    "vendor_id": {
      "required": false,
      "type": "string",
      "description": "unique identifier of parent vendor"
    },
    "bring": {
      "comment": "describes what clients should bring to the event",
      "required": false,
      "type": "string"
    },
    "advice":{
        "comment": "vendor advice concerning participants",
        "required": false,
        "type": "string"
    },
    "hint":{
        "comment": "vendor advice concerning the order",
        "required": false,
        "type": "string"
    },
    "participant_hint":{
        "comment": "question or advice directed towards each participant, will be delivered in participant comment field",
        "required": false,
        "type": "string"
    },
    "vendor_name": {
      "required": false,
      "type": "string",
      "description": "vendor name, usually a company name, will always be delivered but not necessary for incoming requests"
    },
    "youtubeVideoId": {
      "required": false,
      "type": "string",
      "description": "Youtube video id, links / embeds MUST be implement client side"
    },
    "voucher_checkout_url": {
      "required": false,
      "type": "string",
      "description": "checkout url to buy a voucher through the bookingkit system, will always be delivered but not necessary for incoming requests"
    },
    "root_event_id": {
      "required": false,
      "type": "string",
      "description": "root event identifier"
    },
    "images": {
      "required": false,
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": [
        {
          "type": "string",
          "description": "image URL"
        }
      ]
    },
    "highlights": {
      "required": false,
      "type": "array",
      "uniqueItems": true,
      "maxItems": 10,
      "items": [
        {
          "type": "string",
          "description": "list overview of main attractions for the event"
        }
      ]
    },
    "categories": {
      "description": "full ordered category tree path, on incoming requests the deepest level id is sufficient",
      "required": false,
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "required": true,
              "type": "integer",
              "description": "unique identifier"
            },
            "title": {
              "required": false,
              "type": "string",
              "description": "category name"
            }
          }
        }
      ]
    },
    "prices": {
      "required": false,
      "type": "array",
      "uniqueItems": true,
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "required": false,
              "type": "string",
              "description": "unique identifier"
            },
            "title": {
              "required": true,
              "type": "string",
              "description": "price name, will explain the difference to other prices"
            },
            "value": {
              "required": true,
              "type": "number",
              "description": "price value"
            },
            "currency": {
              "required": true,
              "type": "string",
              "maxLength": 3,
              "minLength": 3,
              "description": "price currency"
            }
          }
        }
      ]
    },
    "tags": {
      "required": false,
      "type": "array",
      "description": "optional tags for the event",
      "items": [
        {
          "type": "object",
          "properties": {
            "title": {
              "required": true,
              "type": "string"
            },
            "values": {
              "required": false,
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    },
    "min_participants": {
      "required": false,
      "type": "integer",
      "description": "minimum number of concurrent participants for one event"
    },
    "latest_booking_time": {
      "required": false,
      "type": "integer",
      "description": "time (in minutes) before event start when event not bookable"
    }
  }
}
