{
  "required": true,
  "$schema": "http://json-schema.org/draft-03/schema",
  "type": "object",
  "title": "Date Patch",
  "properties": {
    "date_id": {
      "required": false,
      "type": "string",
      "description": "unique identifier of date"
    },
    "event_id": {
      "required": false,
      "type": "string",
      "description": "unique identifier of parent event"
    },
    "date": {
      "required": true,
      "type": "string",
      "format": "date-time",
      "description": "starting time of the event",
      "example": "format: YYYY-MM-DDThh:mm:ssZ, UTC"
    },
    "available_slots": {
      "required": false,
      "description": "number of available seats / persons",
      "type": "integer"
    },
    "total_slots": {
      "required": false,
      "description": "total number of seats / persons",
      "type": "integer"
    }
  }
}
